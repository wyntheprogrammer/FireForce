@model FireForce.Application.DTOs.EquipmentDTO
@{
    ViewData["Title"] = "Delete Equipment";
}

<h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Equipment</h1>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this equipment?</h5>
    <p>This action cannot be undone. All equipment data will be permanently removed.</p>
</div>

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Equipment Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Equipment Number:</dt>
            <dd class="col-sm-8">@Model.EquipmentNumber</dd>

            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Type:</dt>
            <dd class="col-sm-8">@Model.Type</dd>

            <dt class="col-sm-4">Manufacturer:</dt>
            <dd class="col-sm-8">@Model.Manufacturer</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Station:</dt>
            <dd class="col-sm-8">@(Model.StationName ?? "Unassigned")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> No, Go Back
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete Equipment
                </button>
            </div>
        </form>
    </div>
</div>