@model FireForce.Application.DTOs.ChangePasswordDTO
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-key"></i> Change Password</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> For your security, please enter your current password before setting a new one.
                    </div>

                    <div class="mb-4">
                        <label asp-for="CurrentPassword" class="form-label">
                            <i class="bi bi-lock"></i> Current Password *
                        </label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Enter your current password" autofocus/>
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="bi bi-lock"></i> New Password *
                        </label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="text-muted">Minimum 6 characters</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-lock"></i> Confirm Password *
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-exclamation-triangle"></i><strong>Important:</strong> You will remain logged in after changing your password.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Change Password
                        </button>
                    </div>

                </form>
            </div>
        </div>

        <div class="card shadow mt-3 border-info">
            <div class="card-body">
                <h6 class="text-info"><i class="bi bi-shield-alt"></i> Password Requirements</h6>
                <ul class="mb-0 small">
                    <li>At least 6 characters long</li>
                    <li>Use a mix of letters, numbers, and symbols for better security</li>
                    <li>Avoid using easily guessable passwords</li>
                    <li>Don't reuse passwords from other accounts</li>
                </ul>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
