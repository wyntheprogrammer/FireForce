@model FireForce.Application.DTOs.StationDTO
@{
    ViewData["Title"] = "Delete Station";
}

<h1 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Station</h1>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this station?</h5>
    <p>This will also affect all firefighters and equipment assigned to this station.</p>
</div>


<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Station Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Station Number:</dt>
            <dd class="col-sm-8">@Model.StationNumber</dd>
            <dt class="col-sm-4">Name:</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <dt class="col-sm-4">City:</dt>
            <dd class="col-sm-8">@Model.City</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> No, Go Back
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete Station
                </button>
            </div>
        </form>
    </div>
</div>