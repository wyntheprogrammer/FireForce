@model FireForce.Application.DTOs.StationDTO
@{
    ViewData["Title"] = "Create Station";
}

<h1><i class="fas fa-plus"></i> Create Fire Station</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card-shadow">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StationNumber" class="form-label"></label>
                            <input asp-for="StationNumber" class="form-control" placeholder="e.g., ST-001"/>
                            <span asp-validation-for="StationNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Downtown Fire Station" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Street addresss" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>


                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+63-XXX-XXX-XXXX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Capacity" class="form-label"></label>
                            <input asp-for="Capacity" type="number" class="form-control" min="1"/>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                            <small class="text-muted">Maximum number of firefighters</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Active">Active</option>
                                <option value="Maintennace">Maintennace</option>
                                <option calue="Closed">Closed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-save"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}